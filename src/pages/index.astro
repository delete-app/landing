        .sub{font-size:clamp(1.1rem,2.5vw,1.25rem);color:#888;margin-bottom:2.5rem}
        form{display:flex;flex-direction:column;gap:.75rem}
        input,select{width:100%;padding:1rem;font-size:1rem;font-family:inherit;background:#141414;border:1px solid #222;border-radius:6px;color:#fafafa;appearance:none}
