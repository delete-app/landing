        .pts p::before{content:'';position:absolute;left:0;top:.55rem;width:5px;height:5px;background:#e67e22;border-radius:50%}
        footer{padding:1.5rem 0;border-top:1px solid #1a1a1a}
        footer .c{display:flex;justify-content:space-between;align-items:center}
        .cp{font-size:.875rem;color:#555}
        .sl{display:flex;gap:1rem}
        .sl a{color:#888;text-decoration:none;transition:color .15s}
        .sl a:hover{color:#e67e22}
        @media(min-width:600px){form{flex-direction:row;flex-wrap:wrap}input{flex:2}select{flex:1}button{width:auto}}
